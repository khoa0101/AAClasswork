<h1>New Cat</h1>
<form action="<%cats_url%>" method="POST">
  <label>Name: 
    <input type="text" name="cat[name]" value="<%= @current_cat.name %>">
  </label>

  <br>
  
  <label>Sex:</label>
  <label for="male">Male 
    <input type="radio" id="male" name="cat[sex]" value="M">
  </label>
  <label for="female">Female 
    <input type="radio" id="female" name="cat[sex]" value="F">
  </label>  

    <br>

  <label for="color">Color: </label>
  <select id="color" name="cat[color]">
    <option disabled selected>--Select Option--</option>
    <option value = "smoke">Smoke</option>
    <option value = "white">White</option>
    <option value = "blue">Blue</option>
    <option value = "red tabby">Red Tabby</option>
    <option value = "silver tabby">Silver Tabby</option>
  </select>

  <label for="birthday">Birthday: </label>
  <input type="date" id="birthday" name="cat[birth_date]">

  <label for="description">Description: </label>
  <textarea name="cat[description]"></textarea>

  <input type="submit" value="Add Cat!">
</form>